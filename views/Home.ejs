<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>

<div class="container-fluid p-2">
    <div class="row">
        <!-- for the settings -->
        <div class="col-sm-6 col-md-1 col-lg-2  p-2 d-none d-md-block">
            <img style="border-radius: 40px; width: 60px;height: 60px;padding: 6px;" src="<%= locals.user.avtar %>"
                alt="hallo">
            <span><strong>
                    <%= locals.user.name %>
                </strong></span>
            <div class="d-flex flex-column flex-shrink-0 bg-light vh-100" style="width: 100%;">
                <ul class="nav nav-pills nav-flush flex-column mb-auto ">
                    <!-- for the friend icon -->
                    <li class="nav-item"> <a href="/saved" class="nav-link  py-3 border-bottom">
                          <img class="fa" width="40px" src="https://cdn-icons-png.flaticon.com/128/9386/9386934.png" alt="">
                            <span  style="color: black;">Friends</span>
                        </a> </li>

                        <!-- for the saved post list -->
                        <li class="nav-item"> <a href="/friends" class="nav-link  py-3 border-bottom">
                            <img class="fa" width="40px" src="https://cdn-icons-png.flaticon.com/128/5667/5667029.png" alt="">
                              <span  style="color: black;">Saved</span>
                          </a> </li>

                          <!-- for the add show video -->
                          <li class="nav-item"> <a href="/video" class="nav-link  py-3 border-bottom">
                            <img class="fa" width="40px" src="https://cdn-icons-png.flaticon.com/128/4406/4406124.png" alt="">
                              <span  style="color: black;">Video</span>
                          </a> </li>

                          <!-- for the memory -->
                          <li class="nav-item"> <a href="/memory" class="nav-link  py-3 border-bottom">
                            <img class="fa" width="40px" src="https://cdn-icons-png.flaticon.com/128/11923/11923573.png" alt="">
                              <span  style="color: black;">Memories</span>
                          </a> </li>

                          <!-- for the feed -->
                          <li class="nav-item"> <a href="/feed" class="nav-link  py-3 border-bottom">
                            <img class="fa" width="40px" src="https://cdn-icons-png.flaticon.com/128/11923/11923573.png" alt="">
                              <span  style="color: black;">Memories</span>
                          </a> </li>

                          <!-- for the add post -->
                          <li class="nav-item"> <a  class="nav-link  py-3 border-bottom">
                            <img  data-bs-toggle="modal" data-bs-target="#exampleModal" class="fa" width="40px" src="https://cdn-icons-png.flaticon.com/128/3578/3578003.png" alt="">
                              <span  style="color: black;">Post</span>
                          </a> </li>

                        <!-- for the setting icon -->
                        <li class="nav-item"> <a href="/setting" class="nav-link  py-3 border-bottom">
                            <img class="fa" width="40px" src="https://cdn-icons-png.flaticon.com/128/11710/11710597.png" alt="">
                              <span  style="color: black;">Setting</span>
                          </a> </li>
                    
                    
                </ul>
                <div class="dropdown border-top"> <a href="#"
                        class="d-flex align-items-center justify-content-center p-3 link-dark text-decoration-none dropdown-toggle"
                        id="dropdownUser3" data-bs-toggle="dropdown" aria-expanded="false"> <img
                            src="https://github.com/mdo.png" alt="mdo" width="24" height="24" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser3">
                        <li><a class="dropdown-item" href="#">New project...</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div>
            </div>
        </div>


        <!-- for the post -->
        <div class="col-sm-12 col-md-6 col-lg-7 " style="border: none !important;">
            <div class="card border-0">
                <div class="card-body border-0" style="height: 85vh; overflow-y: scroll;">


                    <div id="post-list-container " class="border-0">
                        <!-- <ul> -->
                        <% for(post of posts) { %>
                            <%- include('_post') -%>
                                <% } %>
                                    <!-- </ul> -->
                    </div>
                </div>
                <% if(locals.user) { %>
                    <div class="text-center">
                        <a href="#">
                            <img width="30px" data-bs-toggle="modal" data-bs-target="#exampleModal"
                                src="https://cdn-icons-png.flaticon.com/128/5728/5728191.png" alt="" srcset="">
                        </a>
                    </div>
                    <% } %>

            </div>

        </div>

        <!-- for friends -->
        <div class="col-sm-6 col-md-3 col-lg-3 d-none d-md-block">
            <div class="card" style="max-height: 70vh; overflow-y: scroll;">
                <div class="card-body">
                    <section class="user-friend">
                        <h3>Friends: </h3>
                        <% for(u of users){%>

                            <p class="mt-2">
                            <nav class="navbar navbar-expand post-comment"
                                style="box-shadow: 5px 5px 3px 0px gray;background-color: rgb(248, 240, 240)">
                                <div class="container-fluid">
                                    <a class="navbar-brand" href="/user/profile/<%= u.id%>">

                                        <!-- for the like -->
                                        <img src="<%= u.avtar %>" style="border-radius: 50%; width: 50px; height: 50px;"
                                            class="img-fluid mt-2" alt="...">
                                    </a>
                                    <!-- for the comment -->
                                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                            <li class="nav-item">

                                                <%= u.name %>

                                            </li>
                                        </ul>
                                        <!-- for the share -->

                                    </div>

                                </div>
                            </nav>

                            </p>
                            <%} %>
                    </section>
                </div>
            </div>
        </div>
        <!-- Modal for the adding new post-->
        <%-include('adding_Post_model')-%>

    </div>
</div>


